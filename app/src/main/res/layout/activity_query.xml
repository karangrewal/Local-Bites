<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/query_background2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.karangre.localbites.QueryActivity">

    <TextView
        android:fontFamily="sans-serif-medium"
        android:id="@+id/search_message"
        android:layout_above="@+id/space1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="search your town"
        android:textColor="#FFFFFF"
        android:textSize="33dp"
        android:textStyle="bold"/>

    <Space
        android:id="@+id/space1"
        android:layout_above="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <EditText
        android:background="#FFFFFF"
        android:hint="e.g. San Francisco"
        android:id="@+id/search_bar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="28dp"/>

    <Space
        android:id="@+id/space2"
        android:layout_below="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <Button
        android:background="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space2"
        android:padding="15dp"
        android:onClick="launchSearchActivity"
        android:text="Search"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="22dp"
        android:textStyle="bold"/>

</RelativeLayout>
